@model Buch.Models.Kassenbuch

@{
    ViewData["Title"] = "Rechnungen für " + Model.Monat;
}

<h1>Rechnungen für @Model.Monat</h1>

<table class="table">
    <thead>
        <tr>
            <th>Datum</th>
            <th>Betrag</th>
            <th>Art</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rechnung in Model.Rechnungen)
        {
            <tr>
                <td>@rechnung.Datum.ToShortDateString()</td>
                <td>@rechnung.Betrag</td>
                <td>@rechnung.Art</td>
                <td>
                    <a asp-action="Edit" asp-controller="Rechnung" asp-route-id="@rechnung.Id" class="btn btn-primary">Edit</a> |
                    <a asp-action="Details" asp-controller="Rechnung" asp-route-id="@rechnung.Id" class="btn" style="background-color:burlywood; color: white">Details</a> 
                    <a asp-action="Delete" asp-controller="Rechnung" asp-route-id="@rechnung.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="Index" asp-controller="Kassenbuch">Back to Kassenbuch</a>
</div>